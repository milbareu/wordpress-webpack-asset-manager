{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release v${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "src/AssetManager.php",
      "out": "src/AssetManager.php",
      "search": "const VERSION = '.*';",
      "replace": "const VERSION = '${version}';"
    }
  }
}
